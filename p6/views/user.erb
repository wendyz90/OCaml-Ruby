<% if user then %>
<div class="grid">
  <section class="user">
    <img class="avatar" src="/avatars/<%= user[:avatar] %>" />
    <h2> <%= params[:user] %> </h2>
    <%= user[:description] %>
  </section>

  <section class="epsilons">
    <% epsilons.each do |epsilon| %>
      <div class="box">
        <img class="box-avatar" src="/avatars/<%= epsilon[:avatar] %>" />
        <div class="box-body">
          <a href="/user?q=<%= epsilon[:user] %>"><%= epsilon[:user] %></a> â—‡ <%= epsilon[:date] %>
          <p> <%= epsilon[:content] %> </p>
        </div>
      </div>
    <% end %>
  </section>
</div>
<% else %>
<h2> We could not find that user. </h2>
<% end %>

